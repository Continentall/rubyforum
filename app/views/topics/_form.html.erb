<!-- Из-за _в начале названия файла - это Паршал-->

<%= render 'shared/errors', object: @topic %> <!-- object - переменная внутри паршела errors -->


<%= form_with model: @topic do |f| %> <!-- Создание формы, данные которой пойдут в модель @topic / С помощью f можем добавлять элементы -->
    <div class="mb-3 row">
        <div class="col-sm-2 col-form-label">
            <%= f.label :title %> <!-- Создает html тег label -->
        </div>

        <div class="col-sm-10">
            <%= f.text_field :title,  placeholder: t('.title'), class: 'form-control' %> <!-- Сложно для восприятия, но важно правилно ставить : -->
        </div>
    </div>

    <div class="mb-3 row">
        <div class="col-sm-2 col-form-label">
            <%= f.label :body %> <!-- Создает html тег label -->
        </div>

        <div class="col-sm-10">
            <%= f.text_area :body,  placeholder: t('.text'), class: 'form-control' %> <!-- Сложно для восприятия, но важно правилно ставить : -->
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-sm-2 col-form-label">
        <%= f.label :tags %>
        </div>

        <div class="col-sm-10">
            <%= f.collection_select :tag_ids, tags, :id, :title, {}, multiple: true %>
        </div>
    </div>

    <%= f.submit t('.publish'), class: 'btn btn-success' %>
<% end %>