<% provide :page_title, t('.title') %>
<% currently_at t('menu.users')%>

<h1 class="mb-4"><%= t('menu.users') %></h1>

<div class="btn-group mb-3">
    <%= link_to t('.download'), admin_users_path(format: :zip), class: 'btn btn-secondary'%>
</div>
<%= pagination @pagy %>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col"><%= t('.id') %></th>
            <th scope="col"><%= t('users.form.login') %></th>
            <th scope="col"><%= t('users.form.email') %></th>
            <th scope="col"><%= t('.role') %></th>
            <th scope="col"><%= t('.created') %></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <%= render @users %> <!-- Легко забыть но, тут не просто рендерятся переменные образца класса а создается цикл который рендерит паршал user заполняя данными user -->
</table>
<%= pagination @pagy %>

<h2 class="mb-3"><%= t('.import')%></h2>
<%= form_with url: admin_users_path do |f| %> <!-- т.е отправка в create -->
    <div class="mb-3 row">
        <div class="col-sm-2 col-form-label">
            <%= f.label :archive, t('.choose')%>
        </div>

        <div class="col-sm-10">
            <%= f.file_field :archive, class: 'form-control'%>
        </div>
    </div>
    <%= f.submit t('.upload'), class: 'btn btn-primary'%>
<% end %>