<% provide :page_title, 'Администрированние пользователей'%>
<% currently_at 'Пользователи'%>

<h1 class="mb-4">Администрированние пользователей</h1>

<div class="btn-group mb-3">
    <%= link_to "Скачать архив XLSX", admin_users_path(format: :zip), class: 'btn btn-secondary'%>
</div>
<%= pagination @pagy %>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Имя</th>
            <th scope="col">Эл. почта</th>
            <th scope="col">Создан</th>
            <th scope="col">Изменен</th>
        </tr>
    </thead>
    <%= render @users %> <!-- Легко забыть но, тут не просто рендерятся переменные образца класса а создается цикл который рендерит паршал user заполняя данными user -->
</table>
<%= pagination @pagy %>

<h2 class="mb-3">Добавление пользователей из XLSX-документа</h2>
<%= form_with url: admin_users_path do |f| %> <!-- т.е отправка в create -->
    <div class="mb-3 row">
        <div class="col-sm-2 col-form-label">
            <%= f.label :archive, 'Выберите архив'%>
        </div>

        <div class="col-sm-10">
            <%= f.file_field :archive, class: 'form-control'%>
        </div>
    </div>
    <%= f.submit 'Загрузить', class: 'btn btn-success'%>
<% end %>