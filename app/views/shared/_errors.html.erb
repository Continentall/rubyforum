
<% if object&.errors&.full_messages&.any? %> <!-- Если есть сообщения об ошибке-->
    <div class="alert alert-danger">
        <ul class="mb-0">
            <% object.errors.full_messages.each do |message| %> <!-- Разбиваем массив ошибок на кусочки-->
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>