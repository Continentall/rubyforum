<%= render 'shared/errors', object: @message %>

<%= form_with model: [@topic, @message] do |f|%> <!-- Почему же model: [@topic, @message], потому что путь для отправки данных состоит из двух частей, а не одной  -->
    <div class="mb-3 row">
        <div class="col-sm-2 col-form-label">
            <%= f.label :body %>
        </div>
        <div class="col-sm-10">
        <%= f.text_area :body, class: 'form-control' %>
        </div>
    </div>
    <%= f.submit "Опубликовать", class: 'btn btn-primary'%>
<% end %>